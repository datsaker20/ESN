@using Abp.Web.Mvc.Extensions
@model ESN.Web.Models.Account.LoginFormViewModel
@section Styles
{
    @Html.IncludeStyle("~/Views/Account/Login.css")
}
@section Scripts
{
    @Html.IncludeScript("~/Views/Account/Login.js")
}

<div class="card">
    <div class="body">
        <form id="ForgotPasswordForm" method="POST" asp-action="ForgotPassword">
            <h4 class="text-center">Forgot password</h4>
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="material-icons">email</i>
                </span>
                <div class="form-line">
                    <input type="email" class="form-control" name="email" 
                           placeholder="register email" required autofocus maxlength="200">
                </div>
            </div>
            
            <div class="row">
                <div class="col-xs-4">
                    <button class="btn btn-block bg-pink waves-effect" type="submit" style="margin-left: 30px;">Reset</button>
                </div>
            </div>
           
            <div class="row m-t-15 m-b--20">
                <div class="col-xs-12">
                    <a href="@Url.Action("Login", "Account")">Back to login</a>
                </div>
            </div>
        </form>

    </div>
</div>