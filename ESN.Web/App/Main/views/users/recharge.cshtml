<form id="frm_create_user" novalidate name="userRecharge">
    <div class="modal-header">
        <button type="button" class="close" ng-click="vm.close()" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">
            <span>Recharge</span>
        </h4>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <div class="row">
                <div class="col-sm-12">
                    <label>Available coin</label>
                    <input class="validate form-control" ng-model="vm.user.coin" disabled="disabled" type="text"/>
                </div>
            </div>
        </div>
        
        <div class="form-group">
            <div class="row clearfix">
                <div class="col-sm-5">
                    <label>Deposits(coin)</label>
                    <input class="validate form-control" ng-model="vm.user.money" required type="number"
                           ng-change="vm.convertMoneyToCoin()"/>
                    <div style="font-size: 0.9em; font-style: italic; color: red">(1000 VNĐ = 1 <i class="fa fa-bitcoin"></i>)</div>
                </div>
                <div class="col-sm-2" style="display: flex; align-items: center">
                    <span class='material-icons'>arrow_forward</span>
                </div>
                <div class="col-sm-5">
                    <label>Deposits(coin)</label>
                    <input class="validate form-control" ng-model="vm.user.coinDest" disabled="disabled"/>
                </div>
            </div>
        </div>
        
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" ng-click="vm.cancel()">
            @L("Cancel")
        </button>
        <button type="submit" class="btn btn-primary waves-effect" ng-click="vm.save()" ng-disabled="userRecharge.$invalid">
            Recharge
        </button>
    </div>
</form>