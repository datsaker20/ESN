<div class="row clearfix" ng-controller="app.views.best-seller.index as vm">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card main-content">
            <div class="header">
                <h2>
                    Best sellers
                </h2>
            </div>
            <div class="body table-responsive">
                <!-- ******************************************************** -->
                <div class="seperate" style="height: 1px; border-bottom: 1px dashed #dddddd; margin-top: 10px; margin-bottom: 10px"></div>
                
                <table class="table table-hover table-striped">
                    <thead>
                    <tr>
                        <th style="width: 120px;">Book Name</th>
                        <th style="width: 100px;">Purchase Count</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr ng-repeat="item in vm.data">
                        <td>{{item.bookName}}</td>
                        <td>{{item.purchaseCount}}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>