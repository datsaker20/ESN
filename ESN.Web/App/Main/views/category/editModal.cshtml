<form id="frm_edit_user" novalidate>
    <div class="modal-header">
        <button type="button" class="close" ng-click="vm.close()" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">
            <span>Category Infomation</span>
        </h4>
    </div>
    <div class="modal-body">
        <div>
            <div class="row clearfix" style="margin-top: 10px;">
                <div class="col-sm-12">
                    <div class="form-group ">
                        <label for="username" class="form-label">Category name</label>
                        <input id="username" type="text" name="UserName" ng-model="vm.category.name" required class="validate form-control">
                    </div>
                </div>
            </div>
            
            <div class="row clearfix">
                <div class="col-sm-12">
                    <div class="form-group ">
                        <label for="parentId" class="form-label">Parent Category</label>
                        <select class="validate form-control" ng-model="vm.category.parent_id_obj" id="parentId"
                                ng-options="option.name for option in vm.categoryRoot track by option.id">
                        </select>
                    </div>
                </div>
            </div>
                            
            <div class="row clearfix">
                <div class="col-sm-12">
                    <div class="form-group ">
                        <div class="form-group">
                            <label for="order" class="form-label">Order</label>
                            <input id="order" type="number" name="order" ng-model="vm.category.order" class="validate form-control">
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row clearfix">
                <div class="col-sm-12">
                    <div class="form-group ">
                        <div class="">
                            <input id="isactive" type="checkbox" name="IsActive" ng-model="vm.category.is_display" checked class="form-control" />
                            <label for="isactive" class="form-label">Is Display</label>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" ng-click="vm.cancel()">
            @L("Cancel")
        </button>
        <button type="submit" class="btn btn-primary waves-effect" ng-click="vm.save()" ng-disabled="userCreateForm.$invalid">
            @L("Save")
        </button>
    </div>
</form>